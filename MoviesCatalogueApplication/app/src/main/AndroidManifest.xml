<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quicksilver.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".views.movieHome.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.movieDetails.MovieDetailsActivity" />
        <activity android:name=".views.movieCreate.MoviesCreateActivity" />
        <activity
            android:name=".views.movieGenres.MoviesGenresActivity"
            android:label="@string/title_activity_genres" />
        <activity
            android:name=".views.moviesList.MoviesListActivity"
            android:label="MoviesListActivity" />
    </application>

</manifest>